package br.com.alura.contas.main;

public class Palindromo {
	private String texto;
	private String textoInvertido;

	public Palindromo(String texto) {
		this.texto = texto;
	}

	public void getPalindromo(Palindromo p) {
		textoInvertido = p.toString();
		for(int i=textoInvertido.length()-1;i >0;i--) {
			System.out.println(textoInvertido.charAt(i));
		}
	}

	public void setTexto(String texto) {
		this.texto = texto;
	}

	@Override
	public String toString() {
		return this.texto;
	}

}
